lvh.me {
	tls internal

	encode gzip

	route {
		route /kibana* {
			forward_auth queue:8080 {
				uri /users/@am-site-admin
			}

			uri strip_prefix /kibana
			reverse_proxy kibana:5601
		}

		route /api/* {
			uri strip_prefix /api
			reverse_proxy queue:8080
		}

		rewrite /queues/* index.html
		rewrite /admin index.html

		file_server {
			root /dist
			index index.html
		}
	}

	log {
		output stdout
		format json
	}
}
